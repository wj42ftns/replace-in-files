{
  "Validator": {
    "requiredOptions": [
      "files",
      "from"
    ],
    "checkTypes": [
      {
        "optionName": "files",
        "checks": ["isArray", "isString"]
      },
      {
        "optionName": "from",
        "checks": ["isRegExp", "isString"]
      },
      {
        "optionName": "optionsForFiles",
        "checks": ["isObject"]
      },
      {
        "optionName": "to",
        "checks": ["isFunction", "isString"]
      },
      {
        "optionName": "defaultEncoding",
        "checks": ["isString", "isNull"]
      },
      {
        "optionName": "onlyFindPathsWithoutReplace",
        "checks": ["isBoolean"]
      },
      {
        "optionName": "replaceFileOnlyIfMatchRegxpInFile",
        "checks": ["isRegExp", "isString"]
      }
    ]
  },
  "Configurator": {
    "defaultEncoding": "utf8",
    "defaultReturnCountOfMatchesByPaths": true,
    "defaultReturnPaths": true,
    "defaultOptionsForFiles": {
      "ignore": [
        "**/node_modules/**"
      ],
      "nodir": true
    }
  }
}
